<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            styleClass="anchor-pane"
            stylesheets="@../styles.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="patrick.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vbarPolicy="ALWAYS"
                    fitToWidth="true"
                    styleClass="scroll-pane"
                    AnchorPane.topAnchor="1.0"
                    AnchorPane.bottomAnchor="60.0"
                    AnchorPane.leftAnchor="1.0"
                    AnchorPane.rightAnchor="1.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="10.0"
                      prefWidth="388.0"
                      styleClass="dialog-container" />
            </content>
        </ScrollPane>
        
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   promptText="Type your message here..."
                   AnchorPane.bottomAnchor="10.0"
                   AnchorPane.leftAnchor="10.0"
                   AnchorPane.rightAnchor="90.0" />
        
        <Button fx:id="sendButton"
                text="Send"
                onAction="#handleUserInput"
                defaultButton="true"
                AnchorPane.bottomAnchor="10.0"
                AnchorPane.rightAnchor="10.0" />
    </children>
</AnchorPane>
